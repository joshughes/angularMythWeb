div(ng-app='ng-app')
  h2 Vidoes
  div(class='container-fluid')
    div(ng-controller='VideoCtrl')
      ul.unstyled
        li(ng-repeat='video in videos.VideoMetadataInfoList.VideoMetadataInfos')
          div(class="row-fluid")
            img(src='{{video.Artwork.ArtworkInfos[1].URL}}&Width=200',class="span3")
            div(class='span9')
              h4 
                a(ng-href='#/video/{{video.Id}}') {{video.Title}} {{video.Certification}}
              p {{video.Description}}
              p{{video.FileName}}
              div(ng-hide='!transcoding(video.FileName).PercentComplete',class='progress progress-striped active span2')
                div(class='bar span2',style='width: {{transcoding(video.FileName).PercentComplete}}%')
                div {{transcoding(video.FileName).PercentComplete}}%
              p {{transcoding(video.FileName).Id}}
              button(ng-click="startStream(video.Id)") Start Stream
        
  