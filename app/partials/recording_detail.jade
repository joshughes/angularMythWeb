div(ng-app='ng-app')
  div(class='container-fluid')
    div(ng-controller='RecordingDetailCtrl')
      h2 {{recorded.Title}} 
      div(class="row-fluid")
        img(src='/Content/GetPreviewImage?ChanId={{recorded.Channel.ChanId}}&Width=200&StartTime={{recorded.StartTime}}',class="span4")
        div(class='span8')
          p(ng-hide='!recorded.SubTitile') SubTitile: {{recorded.SubTitle}}
          p(ng-hide='!recorded.Director') Director: {{recorded.Director}}
            a(ng-href='{{recorded.HomePage}}') {{recorded.HomePage}}
          p(ng-hide='!recorded.Description') {{recorded.Description}}